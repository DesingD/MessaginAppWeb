---
interface Props {
	label: string;
    placeholder: string;
    typeI: string;
}

const { label,placeholder,typeI } = Astro.props;
---
<div class="flex flex-col w-4/5 m-auto gap-1">
    <label for="text" class="text-right text-sm font-semibold text-cblack dark:text-white">{label}</label>
    <input type={typeI} class="border-cprimary border-2 h-11 pl-2 rounded-lg dark:bg-bgColor dark:text-white" placeholder={placeholder}>
</div>
