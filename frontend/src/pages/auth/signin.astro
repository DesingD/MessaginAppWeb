---
import MainLayout from "../../layouts/MainLayout.astro";
import InputText from "../../components/Principal/InputText.astro";
import Button from "../../components/Principal/Button.astro";
import FullLogo from "../../components/Principal/fullLogo.astro";
---

<MainLayout title="EMessage-Login">
    <FullLogo classW="m-auto mt-6 w-36 flex items-center gap-3 select-none"/>
    <h2 class="mt-4 text-cprimary font-bold text-2xl text-center">Sign In</h2>

    <div class="mt-32 flex flex-col gap-11">
        <InputText typeI="text" label="Email" placeholder="Pleace enter your email"/>
        <InputText typeI="password" label="Password" placeholder="Pleace enter your email"/>
    </div>

    <div class="mt-28 flex flex-col gap-2">
        <a href="/auth/signup" class="text-xs font-normal text-[#494F7A] dark:text-[#D6D9ED] ml-[10%]">Sign Up here!</a>
        <Button text="Submit"/>
    </div>
</MainLayout>